<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mauriceoegerli.uek" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pictshare</name>
    <description>
        Share your photos easily
    </description>
    <author email="maurice@oeger.li" href="http://maurice.oeger.li">
        Maurice Oegerli
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon background="res/icon/android/mipmap-ldpi/ic_launcher.png" density="ldpi" foreground="res/icon/android/mipmap-ldpi/ic_launcher.png" />
        <icon background="res/icon/android/mipmap-mdpi/ic_launcher.png" density="mdpi" foreground="res/icon/android/mipmap-mdpi/ic_launcher.png" />
        <icon background="res/icon/android/mipmap-hdpi/ic_launcher.png" density="hdpi" foreground="res/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon background="res/icon/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" foreground="res/icon/android/mipmap-xhdpi/ic_launcher.png" />
        <icon background="res/icon/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" foreground="res/icon/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon background="res/icon/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" foreground="res/icon/android/mipmap-xxxhdpi/ic_launcher.png" />

        <splash src="res/icon/android/splash.png" density="land-hdpi" />
        <splash src="res/icon/android/splash.png" density="land-ldpi" />
        <splash src="res/icon/android/splash.png" density="land-mdpi" />
        <splash src="res/icon/android/splash.png" density="land-xhdpi" />

        <splash src="res/icon/android/splash.png" density="port-hdpi" />
        <splash src="res/icon/android/splash.png" density="port-ldpi" />
        <splash src="res/icon/android/splash.png" density="port-mdpi" />
        <splash src="res/icon/android/splash.png" density="port-xhdpi" />

        <preference name="ShowSplashScreenSpinner" value="false"/>
        <preference name="SplashMaintainAspectRatio" value="true" />

        <preference name="SplashScreenWidth" value="600" />
        <preference name="SplashScreenHeight" value="300" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>